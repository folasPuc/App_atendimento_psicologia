<RegisterPage>:   
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "bg2.jpg"
        Label:
            id: mensagem_login
            text: "Registre-se."
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top":0.85}
            size_hint: 0.8, 0.2
        TextInput:
            id:email
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
        TextInput:
            id:senha
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.1
        TextInput:
            id:telefone
            hint_text: "telefone"
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1
        TextInput:
            id:nome
            hint_text: "Nome"
            pos_hint: {"right": 0.9, "top": 0.25}
            size_hint: 0.8, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "botao1.png" if self.state == "normal" else "botao2.png"
            on_release: app.myfirebase.criar_conta(email.text, senha.text, telefone.text, nome.text)
            text: "Registrar-se"
            bold: True
            pos_hint: {"right": 0.7, "top": 0.10}
            size_hint: 0.4, 0.08