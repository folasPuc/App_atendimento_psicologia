<TodosPacientes>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "bg2.jpg"
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_pacientes

                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
        LabelButton:
            id: alterar_ficha
            text: "Alterar ficha"
            bold: True
            on_release: app.mudar_tela("procurarpaciente")
            pos_hint: {"right": 0.7, "top": 0.85}
            size_hint: 0.4, 0.08
        ImageButton:
            source: "voltar_icone.png"
            on_release: app.mudar_tela("menuadmin")
            pos_hint: {"right": 0.25, "top": 0.17}
            size_hint: 0.4, 0.08

            