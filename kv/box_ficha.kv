<BoxFicha>:
    FloatLayout:
        canvas:
            Color:
                rgba: 188/255, 227/255, 217/255, 1
            Rectangle:
                size: self.size
                pos: self.pos
                
        TextInput:
            id:ficha_paciente
            text: ""
            hint_text: "ficha"
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.6
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "botao1.png" if self.state == "normal" else "botao2.png"
            on_release: app.atualizar_ficha()
            text: "Salvar alteracoes na ficha"
            bold: True
            pos_hint: {"right": 0.7, "top": 0.18}
            size_hint: 0.4, 0.08
        ImageButton:
            source: "voltar_icone.png"
            on_release: app.mudar_tela("alterar_ficha")
            pos_hint: {"right": 0.25, "top": 0.17}
            size_hint: 0.4, 0.08
