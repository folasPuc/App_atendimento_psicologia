<AlterarFicha>:
    FloatLayout:
        canvas:
            Color:
                rgba: 188/255, 227/255, 217/255, 1
            Rectangle:
                size: self.size
                pos: self.pos
                
        Label:
            id: email_usuario
            text: "[b]Usuario_teste[/b]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top":0.85}
            size_hint: 0.8, 0.3
        Label:
            id: telefone_usuario
            text: "[b]Usuario_teste[/b]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top":0.65}
            size_hint: 0.8, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "botao1.png" if self.state == "normal" else "botao2.png"
            on_release: app.carregar_ficha()
            text: "Alterar ficha do paciente"
            bold: True
            pos_hint: {"right": 0.7, "top": 0.1}
            size_hint: 0.4, 0.08
        ImageButton:
            source: "voltar_icone.png"
            on_release: app.mudar_tela("procurarpaciente")
            pos_hint: {"right": 0.25, "top": 0.17}
            size_hint: 0.4, 0.08