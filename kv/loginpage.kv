<LoginPage>:   
    FloatLayout:
        canvas:
            Color:
                rgba: 188/255, 227/255, 217/255, 1
            Rectangle:
                size: self.size
                pos: self.pos
                #edita a parte de baixo
        
        Label:
            id: mensagem_login
            text: "Logue para continuar"           
            font_size: "20sp"
            font_name: "Poppins-Regular.ttf"
            pos_hint: {"center_x": .32, "center_y": .97}
            color: 115/255, 153/255, 141/255, 1
        
        TextInput:
            id:email
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
        Image: 
            source: "mail.png"     
            pos_hint: {"center_x": .8, "center_y": .65}
            size_hint: .1, .1
        TextInput:
            id:senha
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.1
        Image: 
            source: "key.png"     
            pos_hint: {"center_x": .8, "center_y": .50}
            size_hint: .1, .1
        LabelButton:
            canvas.before:
                Color: 
                    rgb: 25/255, 38/255, 35/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]
            on_release: app.myfirebase.fazer_login(email.text, senha.text)
            text: "Fazer login"
            background_color: 0, 0, 0, 0
            font_name: "Poppins-Medium.ttf"
            size_hint: .79, .065
            pos_hint: {"center_x": .5, "center_y": .27} 
        LabelButton:
            canvas.before:
                Color: 
                    rgb: 50/255, 66/255, 63/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]
            on_release: app.mudar_tela("register_page")
            text: "Registrar-se"
            background_color: 0, 0, 0, 0
            font_name: "Poppins-Medium.ttf"
            size_hint: .79, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            on_press: app.root.current = 'register' 
